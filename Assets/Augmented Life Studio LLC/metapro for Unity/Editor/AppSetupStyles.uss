#logo 
{
    height: 300px;
    width: 500px;
    background-color: blueviolet;
    align-self: center;
}

#buttons
{
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

#items
{
    flex-direction: column;
}

#item
{
    width: 100%;
    height: 40px;
    background-color: darkcyan;
    margin: 5px;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

#item-image
{
    width: 30px;
    height: 30px;
    background-color: darkolivegreen;
}
#item-name
{
    font-size: 20px;
    color: black;
}

#item-button
{
    height: 100%;
}